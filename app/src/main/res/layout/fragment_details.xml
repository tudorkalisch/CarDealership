<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/details_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/volvo_logo1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        />
    <TextView
        android:id="@+id/details_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Type"
        />
    <TextView
        android:id="@+id/details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_type"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Description Description Description Description Description Description Description Description Description Description Description Description "
        />
</RelativeLayout>